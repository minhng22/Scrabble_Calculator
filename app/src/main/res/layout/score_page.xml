<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:paddingEnd="1dp"
    android:paddingStart="1dp"
    android:id="@+id/layout"
    android:background="@drawable/tile">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player Scores"
        android:id="@+id/textView2"
        android:layout_column="0"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/player_number_size"
        android:textColor="@color/Main_Title"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:layout_column="0"
        android:background="@drawable/star"
        android:layout_gravity="left"
        android:foregroundGravity="left"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView4"
        android:layout_column="0"
        android:background="@drawable/star"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreTextView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="10dp"
        android:typeface="serif" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Score Next Player"
        android:id="@+id/scoringButton"
        android:gravity="center_horizontal"
        android:background="@drawable/roundbutton"
        android:layout_gravity="center"
        android:typeface="serif"
        android:textColor="#f6050003"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:radius = "20dp"
        android:layout_weight="0.34"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/newGame"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="New Game"
        android:id="@+id/newGame"
        android:gravity="center_horizontal"
        android:background="@drawable/blueroundbutton"
        android:layout_gravity="center"
        android:typeface="serif"
        android:textColor="#f6050003"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:textStyle="bold"
        android:radius="20dp"
        android:layout_weight="0.34"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="7dp" />
</RelativeLayout>
